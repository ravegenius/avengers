<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jason.avengers">

    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".skill.activities.SkillTabActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize|mcc|mnc"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".other.activities.RichEditorActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".other.activities.drawer.DrawerActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent"/>
        <activity
            android:name=".other.activities.ParallelAdActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".other.activities.ObjectBoxActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>