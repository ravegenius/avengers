<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resume_info_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:ignore="RtlCompat">

    <TextView
        android:id="@+id/resume_info_serial"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/drawable_bg_filleted_corner_pink"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/resume_info_date"
        app:layout_constraintTop_toTopOf="@+id/resume_info_date"
        tools:text="1"/>

    <android.support.constraint.Guideline
        android:id="@+id/resume_info_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="30dp"/>

    <TextView
        android:id="@+id/resume_info_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/resume_info_guideline"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2017-01 - 2017-01"/>

    <TextView
        android:id="@+id/resume_info_company"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_333333"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/resume_info_position"
        app:layout_constraintStart_toStartOf="@+id/resume_info_guideline"
        app:layout_constraintTop_toBottomOf="@+id/resume_info_date"
        tools:text="网易"/>

    <TextView
        android:id="@+id/resume_info_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_666666"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resume_info_date"
        tools:text="高级工程师"/>

    <TextView
        android:id="@+id/resume_info_job_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_3F51B5"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/resume_info_guideline"
        app:layout_constraintTop_toBottomOf="@+id/resume_info_company"
        tools:text="哈哈哈哈哈哈"/>

    <TextView
        android:id="@+id/resume_info_job_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="2dp"
        android:textColor="@color/color_666666"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/resume_info_guideline"
        app:layout_constraintTop_toBottomOf="@+id/resume_info_job_content"
        tools:text="哈哈哈哈哈哈"/>

</android.support.constraint.ConstraintLayout>