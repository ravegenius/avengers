<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:ignore="RtlCompat">

    <TextView
        android:id="@+id/skill_info_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_drawable_bg_filleted_corner_bule_dark"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="JAVA基础"/>

    <TextView
        android:id="@+id/skill_info_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@drawable/common_drawable_bg_filleted_corner_pink"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/skill_info_kind"
        app:layout_constraintStart_toEndOf="@+id/skill_info_kind"
        app:layout_constraintTop_toTopOf="@+id/skill_info_kind"
        tools:text="熟练"/>

    <com.jason.avengers.common.widgets.linebreak.LineBreakLayout
        android:id="@+id/skill_info_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/skill_info_kind"
        app:leftAndRightSpace="5dp"
        app:rowSpace="5dp"/>
</android.support.constraint.ConstraintLayout>