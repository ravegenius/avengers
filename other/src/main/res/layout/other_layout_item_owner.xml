<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/event_color_01"
    tools:ignore="MissingConstraints">

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/owner_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/edit_text_bg_transparent"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/owner_location"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/owner_location"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/edit_text_bg_transparent"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/owner_color"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/owner_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/owner_color"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/edit_text_bg"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/owner_action_detail"
        app:layout_constraintStart_toEndOf="@+id/owner_location"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/owner_action_detail"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:text="@string/other_calendar_owners_action_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/owner_action_save"
        app:layout_constraintStart_toEndOf="@+id/owner_color"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/owner_action_save"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:text="@string/other_calendar_owners_action_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/owner_action_delete"
        app:layout_constraintStart_toEndOf="@+id/owner_action_detail"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/owner_action_delete"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:text="@string/other_calendar_owners_action_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/owner_action_save"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>